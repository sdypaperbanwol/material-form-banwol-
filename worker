<body>
  <h1>방문객 · 작업자 등록 시스템</h1>

  <div class="button-container">
    <button class="menu-button" onclick="showSection('visitor')">🧾 방문객 등록</button>
    <button class="menu-button" onclick="showSection('worker')">👷 작업자 명단</button>
    <button class="menu-button" onclick="showSection('map')">🗺 지도 보기</button>
  </div>

  <!-- 방문객 등록 -->
  <div id="visitor" class="form-section">
    <h2>🧾 방문객 등록</h2>
    <form>
      <label>차량번호</label><input type="text" />
      <label>업체명</label><input type="text" />
      <label>방문객 성명</label><input type="text" />
      <label>방문 인원수</label><input type="number" />
      <label>작업 내용</label><textarea rows="2"></textarea>
      <label>연락처</label><input type="text" />
      <label>면담자</label><input type="text" />
      <label>출입증 번호</label><input type="text" />
      <label>출입 시간</label><input type="time" />
      <label>방문자 서명</label><input type="text" />
      <button type="button" class="submit-btn" onclick="submitVisitor()">방문객 등록 제출</button>
    </form>
  </div>

  <!-- 작업자 등록 -->
  <div id="worker" class="form-section">
    <h2>👷 작업자 출입 명단</h2>
    <form>
      <label>출입일자</label><input type="date" />
      <label>업체명</label><input type="text" />
      <label>성명</label><input type="text" />
      <label>전화번호</label><input type="text" />
      <button type="button" class="submit-btn" onclick="submitWorker()">작업자 등록 제출</button>
    </form>
  </div>

  <!-- 지도 -->
  <div id="map" class="form-section">
    <h2>🗺 회사 지도</h2>
    <img id="map-image" src="https://sdypaperbanwol.github.io/material-form-banwol-/신대양제지반월_드론3.png" alt="회사 지도 이미지" />
  </div>

  <script>
    const scriptURL = 'https://script.google.com/macros/s/AKfycbx5aVCVdvEXRsTt7p6lyAy48j4cDibF93MUsFjC16fK_Y_-FJ1cgU7cEu9K9CB457M76g/exec';

    function showSection(sectionId) {
      ['visitor', 'worker', 'map'].forEach(id => {
        document.getElementById(id).style.display = id === sectionId ? 'block' : 'none';
      });
    }

    function submitVisitor() {
      const form = document.querySelector('#visitor form');
      const data = {
        type: "visitor",
        carNo: form[0].value,
        company: form[1].value,
        name: form[2].value,
        count: form[3].value,
        work: form[4].value,
        phone: form[5].value,
        contact: form[6].value,
        passNo: form[7].value,
        time: form[8].value,
        sign: form[9].value
      };

      fetch(scriptURL, {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams(data)
      })
      .then(res => alert("✅ 방문객 등록 완료"))
      .catch(err => alert("❌ 오류 발생: " + err));
    }

    function submitWorker() {
      const form = document.querySelector('#worker form');
      const data = {
        type: "worker",
        date: form[0].value,
        company: form[1].value,
        name: form[2].value,
        phone: form[3].value
      };

      fetch(scriptURL, {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams(data)
      })
      .then(res => alert("✅ 작업자 등록 완료"))
      .catch(err => alert("❌ 오류 발생: " + err));
    }
  </script>
</body>
